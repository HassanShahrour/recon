@model Reconova.ViewModels.Users.UsersViewModel

@{
    ViewData["Title"] = "Users Page";
    int counter = 1;
}

@section Styles {
    <link rel="stylesheet" href="~/css/tables.css" />
}

<div class="card mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Users</h5>
    </div>

    <div class="card-body">
        <table id="Table" class="table table-hover table-bordered table-striped text-center align-middle shadow-sm rounded">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>BirthDate</th>
                    <th>Plan</th>
                    <th>Plan Start Date</th>
                    <th>End Start Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Users)
                {
                    <tr>
                        <td>@counter</td>
                        <td>@item.FirstName @item.LastName</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.BirthDate.ToString("dd-MM-yyy")</td>
                        <td>@(item.Plan?.Name ?? "No Plan")</td>
                        <td>@(item.PlanStartDate.ToLocalTime().ToString("dd-MM-yyy HH:mm") ?? "No Plan")</td>
                        <td>@(item.Plan?.DurationInDays == -1 ? "Unlimited" : item.PlanEndDate.ToLocalTime().ToString("dd-MM-yyy HH:mm") ?? "No Plan")</td>
                        <td>
                            @if (item.IsDeleted == 0)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Deactivated</span>
                            }
                        </td>
                        <td>
                            <a href="#" data-bs-toggle="modal" data-bs-target="#assignPlanModal" data-user-id="@item.Id" data-plan-id="@item.PlanId">
                                <i class="fa fa-credit-card"></i>
                            </a>

                            <a asp-controller="Network" asp-action="ViewUser" asp-route-id="@item.Id">
                                <i class="fa fa-info-circle"></i>
                            </a>

                            <a href="javascript:void(0);"
                               class="toggle-user-status"
                               data-user-id="@item.Id"
                               data-status="@item.IsDeleted"
                               title="@(item.IsDeleted == 0 ? "Deactivate User" : "Activate User")">
                                <i class="fa @(item.IsDeleted == 0 ? "fa-user-slash text-danger" : "fa-user-check text-success")"></i>
                            </a>


                        </td>
                    </tr>

                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Add Plan Modal -->
<div class="modal fade" id="assignPlanModal" tabindex="-1" aria-labelledby="assignPlanModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="assignPlanModalLabel">Assign Plan to User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="assignPlanForm">

                    <input type="hidden" class="form-control" id="userId"/>

                    <div class="mb-3">
                        <label for="planId" class="form-label">Plan</label>
                        <select class="form-select" id="planId" required>
                            @foreach (var plan in Model.Plans)
                            {
                                <option value="@plan.Id">@plan.Name</option>
                            }
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Assign Plan</button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {

                initializeDataTable('Table');

                $('.toggle-user-status').click(function () {
                    const userId = $(this).data('user-id');
                    const isDeleted = $(this).data('status');
                    const actionText = isDeleted == 0 ? "deactivate" : "activate";

                    Swal.fire({
                        title: `Are you sure you want to ${actionText} this user?`,
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: `Yes, ${actionText}`
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = `/User/Delete/${userId}`;
                        }
                    });
                });

            $('#assignPlanModal').on('show.bs.modal', function (event) {
                const button = $(event.relatedTarget);
                const userId = button.data('user-id');
                const planId = button.data('plan-id');

                $('#userId').val(userId);
                $('#planId').val(planId ?? "");
            });

            $("#assignPlanForm").submit(function (e) {
                e.preventDefault();

                const data = {
                    userId: $("#userId").val(),
                    planId: parseInt($("#planId").val())
                };

                $.ajax({
                    url: '/api/users/assign-plan',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(data),
                    success: function (response) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: response
                        }).then(() => {
                            location.reload(); 
                        });

                        $("#assignPlanModal").modal('hide');
                        $("#assignPlanForm")[0].reset();
                    },
                    error: function (xhr) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: xhr.responseText
                        });
                    }
                });
            });
        });
    </script>
}
