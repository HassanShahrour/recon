@model List<Reconova.Data.Models.User>

@{
    ViewData["Title"] = "Users Page";
    int counter = 1;
}

@section Styles {
    <link rel="stylesheet" href="~/css/tables.css" />
}

<div class="card mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Users</h5>
        <button class="btn btn-blue" >Create</button>
    </div>

    <div class="card-body">
        <table id="Table" class="table table-hover table-bordered table-striped text-center align-middle shadow-sm rounded">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>BirthDate</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@counter</td>
                        <td>@item.FirstName @item.LastName</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.BirthDate</td>
                        <td>
                            <a href="#" >
                                <i class="fa fa-info-circle"></i>
                            </a>

                           <a asp-controller="User" asp-action="Edit" asp-route-id="@item.Id" >
                                <i class="fa fa-edit"></i>
                            </a>

                            <a asp-controller="User" asp-action="Delete" asp-route-id="@item.Id"
                               onclick="return confirm('Are you sure you want to delete this user?');">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>

                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>



@section Scripts {
    <script>
        $(document).ready(function () {
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                            Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: '@TempData["ErrorMessage"]'
                                                        });
            </text>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                            Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: '@TempData["SuccessMessage"]'
                                                        });
            </text>
        }
            initializeDataTable('Table');
        });
    </script>
}
