@model Reconova.Data.Models.Post

@{
    ViewData["Title"] = "Create Post";
}

@section Styles {
    <link rel="stylesheet" href="~/css/create-post.css" />
}

<div class="create-post-wrapper">
    <div class="form-card">
        <h2 class="form-title">📝 Create a New Post</h2>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Content" class="form-label"></label>
                <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Content" class="text-danger small"></span>
            </div>

            <div class="form-group">
                <label class="form-label">Select Images/Videos</label>
                <input asp-for="UploadedFiles" type="file" multiple class="form-control-file" accept="image/*,video/*" />
                <span asp-validation-for="UploadedFiles" class="text-danger small"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-blue">Submit Post</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
