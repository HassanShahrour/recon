@model List<Reconova.Data.Models.Category>

@{
    ViewData["Title"] = "Categories Page";
    int counter = 1;
}

@section Styles {
    <link rel="stylesheet" href="~/css/tables.css" />
}

<div class="card mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Categories</h5>
        <button class="btn btn-blue" data-bs-toggle="modal" data-bs-target="#createCategoryModal">
            <i class="fas fa-plus me-2"></i>Create
        </button>
    </div>

    <div class="card-body">
        <table id="Table" class="table table-hover table-bordered table-striped text-center align-middle shadow-sm rounded">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@counter</td>
                        <td>@item.Name</td>
                        <td>
                            <a href="#" data-bs-toggle="modal" data-bs-target="#editCategoryModal-@item.Id" class="me-2">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="#" class="deleteCategory text-danger" data-id="@item.Id" title="Delete Category">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>

                    <!-- Edit Modal -->
                    <div class="modal fade" id="editCategoryModal-@item.Id" tabindex="-1" aria-labelledby="editCategoryLabel-@item.Id" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="editCategoryLabel-@item.Id">Edit Category</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <input type="hidden" id="editId-@item.Id" value="@item.Id" />
                                    <div class="mb-3">
                                        <label for="Name-@item.Id" class="form-label">Category Name</label>
                                        <input type="text" class="form-control" id="Name-@item.Id" value="@item.Name" required />
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary submitEditCategory" data-id="@item.Id">Save</button>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createCategoryModal" tabindex="-1" aria-labelledby="createCategoryLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createCategoryLabel">Create Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="createName" class="form-label">Category Name</label>
                    <input type="text" class="form-control" id="createName" required />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="submitCreateCategory" class="btn btn-primary">Add</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Create Category
            $("#submitCreateCategory").click(function () {
                const category = {
                    name: $("#createName").val()
                };

                $.ajax({
                    url: '/api/category', 
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(category),
                    success: function () {
                         location.reload();
                    },
                    error: function (xhr) {
                        Swal.fire('Error', xhr.responseText || 'Error creating category', 'error');
                    }
                });
            });

            // Edit Category
            $(".submitEditCategory").click(function () {
                const id = $(this).data("id");
                const category = {
                    id: id,
                    name: $("#Name-" + id).val()
                };

                $.ajax({
                    url: '/api/category/' + id,
                    method: 'PUT',
                    contentType: 'application/json',
                    data: JSON.stringify(category),
                    success: function () {
                         location.reload();
                    },
                    error: function (xhr) {
                        Swal.fire('Error', xhr.responseText || 'Error updating category', 'error');
                    }
                });
            });

            // Delete Category
            $(".deleteCategory").click(function () {
                const id = $(this).data("id");

                Swal.fire({
                    title: 'Are you sure?',
                    text: "This will permanently delete the category.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '/api/category/' + id,
                            method: 'DELETE',
                            success: function () {
                                 location.reload();
                            },
                            error: function (xhr) {
                                Swal.fire('Error', xhr.responseText || 'Error deleting category', 'error');
                            }
                        });
                    }
                });
            });

            initializeDataTable('Table');

        });
    </script>
}
