@model Reconova.ViewModels.Tools.ToolViewModel

@{
    ViewData["Title"] = "Tools Page";
    int counter = 1;
}

@section Styles {
    <link rel="stylesheet" href="~/css/tables.css" />
}

<div class="card mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Tools</h5>
        <button class="btn btn-blue" data-bs-toggle="modal" data-bs-target="#createToolModal">Create</button>
    </div>

    <div class="card-body">
        <table id="Table" class="table table-hover table-bordered table-striped text-center align-middle shadow-sm rounded">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Tools)
                {
                    <tr>
                        <td>@counter</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Category?.Name</td>
                        <td>
                            <a href="#" data-bs-toggle="modal" data-bs-target="#editToolModal-@item.Id">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a asp-controller="Tool" asp-action="Delete" asp-route-id="@item.Id"
                               onclick="return confirm('Are you sure you want to delete this tool?');">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>

                    <!-- Edit Modal -->
                    <div class="modal fade" id="editToolModal-@item.Id" tabindex="-1" aria-labelledby="editToolLabel-@item.Id" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form asp-controller="Tool" asp-action="Edit" method="post">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="editToolLabel-@item.Id">Edit Tool</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <input type="hidden" name="Id" value="@item.Id" />
                                        <div class="mb-3">
                                            <label for="Name-@item.Id" class="form-label">Tool Name</label>
                                            <input type="text" class="form-control" id="Name-@item.Id" name="Name" value="@item.Name" required />
                                        </div>

                                        <div class="mb-3">
                                            <label for="Category-@item.Id" class="form-label">Tool Category</label>
                                            <select class="form-control" id="Category-@item.Id" name="CategoryId" required>
                                                @foreach (var i in Model.Categories)
                                                {
                                                    @if (i.Id == item.CategoryId)
                                                    {
                                                        <option value="@i.Id" selected>
                                                            @i.Name
                                                        </option>
                                                    } else
                                                    {
                                                        <option value="@i.Id">
                                                            @i.Name
                                                        </option>
                                                    }
                                                }
                                            </select>   
                                        </div>

                                        <div class="mb-3">
                                            <label for="Description-@item.Id" class="form-label">Description</label>
                                            <textarea type="text" class="form-control" id="Description-@item.Id"
                                                      name="Description" rows="4" required>@item.Description</textarea>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="submit" class="btn btn-primary">Save</button>
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createToolModal" tabindex="-1" aria-labelledby="createToolLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Tool" asp-action="Add" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="createToolLabel">Create Tool</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="Name" class="form-label">Tool Name</label>
                        <input type="text" class="form-control" id="Name" name="Name" required />
                    </div>

                    <div class="mb-3">
                        <label for="Category" class="form-label">Tool Category</label>
                        <select class="form-control" id="Category" name="CategoryId" required>
                            @foreach (var i in Model.Categories)
                            {
                                <option value="@i.Id">@i.Name</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="Description" class="form-label">Description</label>
                        <textarea type="text" class="form-control" id="Description" name="Description" rows="4" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Add</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            @if (TempData["ErrorMessage"] != null)
            {
                <text>
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: '@TempData["ErrorMessage"]'
                    });
                </text>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <text>
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: '@TempData["SuccessMessage"]'
                    });
                </text>
            }

            initializeDataTable('Table');
        });
    </script>
}
