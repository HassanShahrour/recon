@model Reconova.ViewModels.Tools.ToolViewModel

@{
    ViewData["Title"] = "Tools Page";
    int counter = 1;
}

@section Styles {
    <link rel="stylesheet" href="~/css/tables.css" />
}

<div class="card mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Tools</h5>
        <button class="btn btn-blue" data-bs-toggle="modal" data-bs-target="#createToolModal">
            <i class="fas fa-plus me-2"></i>Create
        </button>
    </div>

    <div class="card-body">
        <table id="Table" class="table table-hover table-bordered table-striped text-center align-middle shadow-sm rounded">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Plan</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Tools)
                {
                    <tr>
                        <td>@counter</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Category?.Name</td>
                        <td>@item.Plan?.Name</td>
                        <td>
                            <a href="#" data-bs-toggle="modal" data-bs-target="#editToolModal-@item.Id" class="me-2">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="#" class="deleteTool text-danger" data-id="@item.Id" title="Delete Tool">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>

                    <!-- Edit Modal -->
                    <div class="modal fade" id="editToolModal-@item.Id"  data-category-id="@item.CategoryId" data-plan-id="@item.PlanId" tabindex="-1" aria-labelledby="editToolLabel-@item.Id" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="editToolLabel-@item.Id">Edit Tool</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <input type="hidden" id="editId-@item.Id" value="@item.Id" />
                                    <div class="mb-3">
                                        <label for="Name-@item.Id" class="form-label">Tool Name</label>
                                        <input type="text" class="form-control" id="Name-@item.Id" value="@item.Name" required />
                                    </div>

                                    <div class="mb-3">
                                        <label for="Category-@item.Id" class="form-label">Tool Category</label>
                                        <select class="form-select" id="Category-@item.Id" name="CategoryId" required>
                                            @foreach (var cat in Model.Categories)
                                            {
                                                <option value="@cat.Id">@cat.Name</option>
                                            }
                                        </select>
                                    </div>

                                    <div class="mb-3">
                                        <label for="Plan-@item.Id" class="form-label">Plan</label>
                                        <select class="form-select" id="Plan-@item.Id" required>
                                            @foreach (var plan in Model.Plans)
                                            {
                                                <option value="@plan.Id">@plan.Name</option>
                                            }
                                        </select>
                                    </div>

                                    <div class="mb-3">
                                        <label for="Description-@item.Id" class="form-label">Description</label>
                                        <textarea class="form-control" id="Description-@item.Id" rows="4" required>@item.Description</textarea>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary submitEdit" data-id="@item.Id">Save</button>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createToolModal" tabindex="-1" aria-labelledby="createToolLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createToolLabel">Create Tool</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="createName" class="form-label">Tool Name</label>
                    <input type="text" class="form-control" id="createName" required />
                </div>

                <div class="mb-3">
                    <label for="createCategory" class="form-label">Tool Category</label>
                    <select class="form-select" id="createCategory" required>
                        @foreach (var cat in Model.Categories)
                        {
                            <option value="@cat.Id">@cat.Name</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label for="createPlan" class="form-label">Plan</label>
                    <select class="form-select" id="createPlan" required>
                        @foreach (var plan in Model.Plans)
                        {
                            <option value="@plan.Id">@plan.Name</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label for="createDescription" class="form-label">Description</label>
                    <textarea class="form-control" id="createDescription" rows="4" required></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="submitCreate" class="btn btn-primary">Add</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('[id^="editToolModal-"]').on('show.bs.modal', function () {
                const modal = $(this);
                const id = modal.attr('id').split('-')[1];

                const categoryId = modal.data('category-id');
                const planId = modal.data('plan-id');

                $("#Category-" + id).val(categoryId);
                $("#Plan-" + id).val(planId);
            });


            // Add Tool
            $("#submitCreate").click(function () {
                const tool = {
                    name: $("#createName").val(),
                    categoryId: parseInt($("#createCategory").val()),
                    planId: parseInt($("#createPlan").val()),
                    description: $("#createDescription").val()
                };

                $.ajax({
                    url: '/api/tool',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(tool),
                    success: function () {
                         location.reload();
                    },
                    error: function (xhr) {
                        Swal.fire('Error', xhr.responseText || 'Error creating tool', 'error');
                    }
                });
            });

            // Edit Tool
            $(".submitEdit").click(function () {
                const id = $(this).data("id");
                const tool = {
                    name: $("#Name-" + id).val(),
                    categoryId: parseInt($("#Category-" + id).val()),
                    planId: parseInt($("#Plan-" + id).val()),
                    description: $("#Description-" + id).val()
                };

                $.ajax({
                    url: '/api/tool/' + id,
                    method: 'PUT',
                    contentType: 'application/json',
                    data: JSON.stringify(tool),
                    success: function () {
                        location.reload();
                    },
                    error: function (xhr) {
                        Swal.fire('Error', xhr.responseText || 'Error updating tool', 'error');
                    }
                });
            });

            // Delete Tool
            $(".deleteTool").click(function () {
                const id = $(this).data("id");

                Swal.fire({
                    title: 'Are you sure?',
                    text: "This will permanently delete the tool.",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '/api/tool/' + id,
                            method: 'DELETE',
                            success: function () {
                                 location.reload();
                            },
                            error: function (xhr) {
                                Swal.fire('Error', xhr.responseText || 'Error deleting tool', 'error');
                            }
                        });
                    }
                });
            });

            initializeDataTable('Table');
        });
    </script>
}
